<center>
<p id="notice"><%= notice %></p>
<h1>Todo Items</h1>



<form method="post" style="width:600px">
  <div class="row">
  <div class="col24s m12">
    <div class="card  purple lighten-3">
           <div class="card-content white-text">
                <table>
                  <thead>
                      <tr style="color: black">
                      <th>Activity</th>
                      <th>Descrption</th>
                      <th>Status</th>
                      <th colspan="3"></th>
                    </tr>

                  </thead>

                  <tbody>
                    <% @todo_items.each do |todo_item| %>
                      <tr style="color: black">
                        <td input type= "text"><%= todo_item.activity %></td>
                        <td><%= todo_item.descrption %></td>
                        <td><%= todo_item.status %></td>
                        <td><%= link_to 'Show', todo_item,class:"btn waves-effect  blue lighten-4" %></td>
                        <td><%= link_to 'Edit', edit_todo_item_path(todo_item),class:"btn waves-effect  blue lighten-4" %></td>
                        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' },class:"btn waves-effect  blue lighten-4" %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>
                <%=  link_to 'New Todo item', new_todo_item_path, class:"btn waves-effect  blue lighten-4" %>
            </div>
        </div>
      </div>
  </div>
</form>
</center>
